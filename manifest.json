{
  "manifest_version": 2,
  "name": "Miv",
  "version": "1.4",

  "description": "A couple of vim like shortcuts for Firefox.",

  "icons": {
    "48": "icons/bgcolor-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["miv.js"]
    }
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "miv@mathiashh.dk"
    }
  }
}


